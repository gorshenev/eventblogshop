<%= form_for(@product) do |f| %>
	<div class="field">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :price %>
		<%= f.number_field :price, step: 0.01 %>
	</div>
	<div class="field">
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>
	<div class="field">
		<%= f.label :photo %>
		<%= f.file_field :photo %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>